{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "bramha-sqlAdminLogin": {
      "type": "string",
      "minLength": 1
    },
    "bramha-sqlAdminLoginPassword": {
      "type": "securestring"
    },
    "crm-dbName": {
      "type": "string",
      "minLength": 1
    },
    "crm-dbCollation": {
      "type": "string",
      "minLength": 1,
      "defaultValue": "SQL_Latin1_General_CP1_CI_AS"
    },
    "crm-dbEdition": {
      "type": "string",
      "defaultValue": "Basic",
      "allowedValues": [
        "Basic",
        "Standard",
        "Premium"
      ]
    },
    "crm-dbRequestedServiceObjectiveName": {
      "type": "string",
      "defaultValue": "Basic",
      "allowedValues": [
        "Basic",
        "S0",
        "S1",
        "S2",
        "P1",
        "P2",
        "P3"
      ],
      "metadata": {
        "description": "Describes the performance level for Edition"
      }
    },
    "myplan-01Name": {
      "type": "string",
      "minLength": 1
    },
    "myplan-01SkuName": {
      "type": "string",
      "defaultValue": "F1",
      "allowedValues": [
        "F1",
        "D1",
        "B1",
        "B2",
        "B3",
        "S1",
        "S2",
        "S3",
        "P1",
        "P2",
        "P3",
        "P4"
      ],
      "metadata": {
        "description": "Describes plan's pricing tier and capacity. Check details at https://azure.microsoft.com/en-us/pricing/details/app-service/"
      }
    }},
  "variables": {
    "bramha-sqlName": "[concat('bramha-sql', uniqueString(resourceGroup().id))]",
    "londondreams01Name": "[concat('londondreams01', uniqueString(resourceGroup().id))]",
    "UAT-VnetPrefix": "10.0.0.0/16",
    "UAT-VnetSubnet1Name": "Subnet-1",
    "UAT-VnetSubnet1Prefix": "10.0.0.0/24",
    "UAT-VnetSubnet2Name": "Subnet-2",
    "UAT-VnetSubnet2Prefix": "10.0.1.0/24",
    "demoweb001Name": "[concat('demoweb001', uniqueString(resourceGroup().id))]"},
  "resources": [
    {
      "name": "[variables('bramha-sqlName')]",
      "type": "Microsoft.Sql/servers",
      "location": "[resourceGroup().location]",
      "apiVersion": "2014-04-01-preview",
      "dependsOn": [ ],
      "tags": {
        "displayName": "bramha-sql"
      },
      "properties": {
        "administratorLogin": "[parameters('bramha-sqlAdminLogin')]",
        "administratorLoginPassword": "[parameters('bramha-sqlAdminLoginPassword')]"
      },
      "resources": [
        {
          "name": "AllowAllWindowsAzureIps",
          "type": "firewallrules",
          "location": "[resourceGroup().location]",
          "apiVersion": "2014-04-01-preview",
          "dependsOn": [
            "[resourceId('Microsoft.Sql/servers', variables('bramha-sqlName'))]"
          ],
          "properties": {
            "startIpAddress": "0.0.0.0",
            "endIpAddress": "0.0.0.0"
          }
        },
        {
          "name": "[parameters('crm-dbName')]",
          "type": "databases",
          "location": "[resourceGroup().location]",
          "apiVersion": "2014-04-01-preview",
          "dependsOn": [
            "[resourceId('Microsoft.Sql/servers', variables('bramha-sqlName'))]"
          ],
          "tags": {
            "displayName": "crm-db"
          },
          "properties": {
            "collation": "[parameters('crm-dbCollation')]",
            "edition": "[parameters('crm-dbEdition')]",
            "maxSizeBytes": "1073741824",
            "requestedServiceObjectiveName": "[parameters('crm-dbRequestedServiceObjectiveName')]"
          }
        }
      ]
    },
    {
      "name": "[parameters('myplan-01Name')]",
      "type": "Microsoft.Web/serverfarms",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-08-01",
      "sku": {
        "name": "[parameters('myplan-01SkuName')]"
      },
      "dependsOn": [ ],
      "tags": {
        "displayName": "myplan-01"
      },
      "properties": {
        "name": "[parameters('myplan-01Name')]",
        "numberOfWorkers": 1
      }
    },
    {
      "name": "[variables('demoweb001Name')]",
      "type": "Microsoft.Web/sites",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-08-01",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', parameters('myplan-01Name'))]"
      ],
      "tags": {
        "[concat('hidden-related:', resourceId('Microsoft.Web/serverfarms', parameters('myplan-01Name')))]": "Resource",
        "displayName": "demoweb001"
      },
      "properties": {
        "name": "[variables('demoweb001Name')]",
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('myplan-01Name'))]"
      }
    }],
  "outputs": {}
}
